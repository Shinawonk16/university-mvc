<head>
    @{
        ViewData["Title"] = "Management Page";
    }
    <h3 style="font-family:cabri;font-size:20px;color:goldenrod">@ViewData["Title"]</h3>
    <style>
        #trans {
            @* border: solid pink 20px; *@
            width: 97px;
            height: 60px;
            background-color: goldenrod
            text-align: center;
            padding: circle;
            margin: circle;
            
        }

        #trans:hover {
            background-color: rgb(0, 58, 128);
            @* border-radius: 20%; *@
        }
    </style>

</head>
<body>
    

<div class="text-center">
    <h1 style="font-family:cabri;font-size : 50px;" class="display-4">Welcome</h1>
    <h1 style="font-family:cabri;font-size : 25zpx;" class="display-4">
        <marquee direction="left">Manage Your Users</marquee>
    </h1>
</div>
<br><br><br>
<div class="margin" style="display:flex;gap:20%;">
    <div class="border" style="border-radius: 30px;" >
        <a id="trans" asp-controller="Chancellor" asp-action="GetAllChancellor" class="btn btn-primary">
            <i class="bi bi-pencil-fill"></i>Manage Chancellors

        </a>
    </div>

    <div class="border" style="border-radius: 30%;">
        <a id="trans" asp-controller="Lecturer" asp-action="GetAllLecturer" class="btn btn-primary">
            <i class="bi bi-pencil-fill"></i>Manage Lecturers

        </a>
    </div>
    <div class="border" style="border-radius: 30%;">
        <a id="trans" asp-controller="Student" asp-action="GetAllStudent" class="btn btn-primary">
            <i class="bi bi-pencil-fill"></i>Manage Students

        </a>
        
    </div>
    <style>
        @* body{
            background-image: url('/login3.jpg');
            background-size: contain;
            background-repeat: no-repeat;
            background-color: rgb(4, 19, 66);
            
        } *@
        .text-center{
            color: lightskyblue;
        }
        @* .bi bi-pencil-fill{
            @* box-sizing: border-box; *@
            @* border-radius: 50% *@
            
        @* }  *@
    </style>

</div>
</body>