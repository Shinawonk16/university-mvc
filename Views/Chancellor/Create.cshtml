@using UniversityManagementMvc.Dto.RequestModel
@model CreateChancellorRequestModel
@using UniversityManagementMvc.Data.Enum;


@if (ViewData != null)
{
    <h2>@TempData["success"]</h2>
}



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] UniversityManagementApp</title>
    <style>
        #trans:hover {
            background-color: rgb(28, 128, 0);
        }

        div {
            color: goldenrod;
            justify-content: flex-start;
            border: 20%;
            padding: auto
           

        }
        ::placeholder{
            color:green;
        }
       

        h2 {
            text-align: center;
            text-decoration: underline;
            color: rgb(0, 255, 136);
        }
       
    </style>
</head>
<body>
    

<h3 style="font-family:cabri;font-size : 20px;">Welcome Create your Chancellor<br>
    <marquee direction="center"></marquee>Register a Chancellor</marquee>
</h3>
@* <body style="background-cobglor: blueviolet;"> *@
<div style="font-size: 120%;">

    <div id="reg-form">
        <form enctype="multipart/form-data" asp-action="CreateChancellor">

            <div class="form-row">


                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Dikko" />
                <span asp-validation-for="FirstName" class="text-danger"></span>

            </div><br>
            <div class="form-row">

                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Sophia" />
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div><br>
            <div class="form-group">
                <label for="Email" class="control-label">Email</label>
                <input type="email" name="Email" id="Email" class="form-control" placeholder="lakes@email.com" />
            </div><br>

            <div class="form-row">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control"
                    placeholder=" PostalNumber,street,City,LGA,State,Country" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div><br>

  <style>
    @* body{
          background-image: url('/chancellor.jpg') ;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        justify-content: space-around;
    } *@
  </style>
            @* <div class="form-row">
                <label asp-for="PassWord" class="control-label"></label>
                <input asp-for="PassWord" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" type="password" id="pass"
                    name="password" class="form-control"
                    placeholder="Password must be 8 characters,consist at least one capital letter,one small letter,and also a number" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div><br> *@

            <div class="form-row">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
            </div><br>

            <div class="form-row">
                <label asp-for="MaritalStatus" class="control-label"></label>
                <select asp-for="MaritalStatus" asp-items="Html.GetEnumSelectList<Status>()"></select>
            </div><br>

            <div class="form-group">
                <label for="DathOfBirth">Date of Birth</label>
                <input type="date" name="DathOfBirth" id="DateOfBirth" class="form-control" />
            </div><br>
            <div class="form-group">
                <label for="NextOfKin">Next Of Kin</label>
                <input type="text" name="NextOfKin" id="NextOfKin" class="form-control" />
            </div><br>
            <div class="form-row">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+234816700465" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div><br>
            <div class="form-row">
                <input type="file" name="Profile picture" id="profilepicture" accept=".png,.jpg,.jpeg,.gif,.tif"
                    asp-for="ProfilePicture" class="form-control"
                    style="border: 0px!important;padding:0px;padding-top:10px;padding-buttom:30px;"
                    onchange="document.getElementById('ProfilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div><br>
            <br><br>
            <div>

                <button id="trans" href="#myModal" type="submit" value="Submit"
                    class="btn btn-success trigger-btn col-sm-12" data-toggle="modal">Submit</button>
            </div>

        </form>
    </div>
</div>
</body>
